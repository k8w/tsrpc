    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "mocha current file",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "args": [
                "--opts",
                "mocha.opts",
                "${file}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/test/"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ts-node current file",
            "protocol": "inspector",
            "args": [
                "${relativeFile}"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}